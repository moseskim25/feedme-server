{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "lib/**/*.ts", "types/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "supabase"]
}
